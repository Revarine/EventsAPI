{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Events.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EmailSettings": {
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 1234,
    "SmtpUsername": "your-username",
    "SmtpPassword": "your-password",
    "SenderEmail": "noreply@yourdomain.com",
    "SenderName": "Events App"
  },
  "JwtSettings": {
    "AccessTokenSecret": "your-super-secret-key-for-access-token-with-minimum-256-bits",
    "RefreshTokenSecret": "your-super-secret-key-for-refresh-token-with-minimum-256-bits",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7,
    "Issuer": "EventsAPI",
    "Audience": "EventsAPI"
  }
}
